{
  "emmet.includeLanguages": {
    "typescript": "html",
    "javascript": "html",
 },
 "bracket-pair-colorizer-2.colors": [
   "#3b3b3b",
   "#0146a1",
   "#0089c9",
   "#b0dce6",
   "#ad9fdf",
   "#ffc400",
   "#00e1ff",
   "#fff",
 ],
 "bracket-pair-colorizer-2.activeScopeCSS": [
   "borderStyle : solid",
   "borderWidth : 1px",
   "borderColor : {color}",
   "opacity: 0.5"
 ],
 "bracket-pair-colorizer-2.forceIterationColorCycle": false,
 "bracket-pair-colorizer-2.colorMode": "Consecutive",
 "bracket-pair-colorizer-2.highlightActiveScope": true,
 "bracket-pair-colorizer-2.showBracketsInGutter": true,
 "bracket-pair-colorizer-2.scopeLineRelativePosition": true,
  "peacock.affectActivityBar": true,
  "peacock.affectStatusBar": true,
  "peacock.favoriteColors": [
    { "name": "Azure Blue", "value": "#00e1ff"},
    { "name": "Powder Blue", "value": "#b0dce6"},
    { "name": "Dark Green", "value": "#06750b" },
    { "name": "Dark Blue", "value": "#0146a1" },
    { "name": "Pastel Green", "value": "#c3eccb"},
    { "name": "Light Pink", "value": "#ffbdd6"},
    { "name": "Hot Pink", "value": "#ff8ab6"},
    { "name": "Orange", "value": "#f3a200"},
  ],
  "php.validate.enable": true,
  "editor.tokenColorCustomizations": {
    "textMateRules": [{
      "scope":"entity.name.tag",
      "settings":{
        "foreground": "#06750b",
        "fontStyle": "bold"
      },
    }],
    "keywords": "#00ad5c",
    "functions": "#c52e00",
    "types": "#0089c9",
    "variables": "#0146a1",
    "numbers": "#bf30cc",
    "strings": "#f3a200",
    "comments": "#7a7a7a",
  },
  "workbench.colorCustomizations":{
    "terminal.background": "#3b3b3b",
    "terminalCursor.foreground": "#ffc400",
    "terminalCursor.background": "#ffc400",
    "terminal.border": "#ffc400",
    "terminal.foreground": "#ffffff",
    "scrollbarSlider.background": "#00e1ff",
    "editor.background": "#dfdfdf",
    "tab.activeBackground": "#ffc400",
    "tab.hoverBackground": "#00e1ff",
    "tab.hoverBorder": "#ffc400",
    "tab.inactiveForeground": "#000000",
    "sideBar.foreground": "#000",
    "sideBarSectionHeader.background": "#ffc400",
    "activityBar.background": "#015cd4",
    "activityBar.foreground": "#e7e7e7",
    "activityBar.inactiveForeground": "#e7e7e799",
    "activityBarBadge.background": "#fe60a4",
    "activityBarBadge.foreground": "#15202b",
    "titleBar.activeBackground": "#0146a1",
    "titleBar.inactiveBackground": "#0146a199",
    "titleBar.activeForeground": "#e7e7e7",
    "titleBar.inactiveForeground": "#e7e7e799",
    "statusBar.background": "#0146a1",
    "statusBarItem.hoverBackground": "#015cd4",
    "statusBar.foreground": "#e7e7e7"
  },
  "[php]":{
    "editor.wordWrap": "on",
  },
  "html.format.enable": true,
  "html.validate.scripts": true,
  "editor.fontWeight": "700",
  "editor.fontFamily": "Menlo, Monaco, 'Courier New', monospace",
  "javascript.preferences.quoteStyle": "auto",
  "php.suggest.basic": true,
  "html.format.indentInnerHtml": true,
  "terminal.integrated.fontWeight": "900",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  "editor.fontSize": 12,
  "terminal.integrated.fontSize": 12,
  "editor.cursorWidth": 4,
  "editor.colorDecorators": true,
  "peacock.color": "#0146a1",
}
